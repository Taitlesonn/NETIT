<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.netit.Application_run_time"
            xmlns="http://javafx.com/javafx/21">

    <top>
        <HBox fx:id="HBox_heder">
            <Label fx:id="heder_inf" styleClass="less-important-text"/>
        </HBox>
    </top>

    <bottom>
        <HBox fx:id="HBox_footer">
            <Label fx:id="footer_inf" styleClass="less-important-text"/>
        </HBox>
    </bottom>

    <left>
        <VBox fx:id="VBox_left" styleClass="dark-panel">
            <Button fx:id="linux_b" styleClass="image-button" onAction="#add_linux"/>
            <Button fx:id="windows_b" styleClass="image-button" onAction="#add_windows"/>
            <Button fx:id="switch_b" styleClass="image-button" onAction="#add_switch"/>
            <Button fx:id="ruter_b" styleClass="image-button" onAction="#add_router"/>
            <Button fx:id="linux_server_b" styleClass="image-button" onAction="#add_linux_server"/>
            <Button fx:id="windows_server_b" styleClass="image-button" onAction="#add_windows_server"/>
            <Button fx:id="connecter" onAction="#connecter_f" text="Connect"/>
            <Button fx:id="disconecter" onAction="#connecter_d" text="disconect"/>
        </VBox>
    </left>

    <right>
        <VBox fx:id="VBox_right" styleClass="dark-panel">
            <Label fx:id="right_inf" styleClass="right-info-label"/>
        </VBox>
    </right>

    <center>
        <Pane fx:id="workspace" styleClass="gray-background"/>
    </center>

</BorderPane>
