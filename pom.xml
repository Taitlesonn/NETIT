<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>netit.com</groupId>
    <artifactId>netit</artifactId>
    <version>0.2</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
    </properties>

    <build>
  
      <plugins>
            <!-- Kompilator z module-path do lokalnego JavaFX -->
            <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.11.0</version>
            <configuration>
                <release>21</release>
                <compilerArgs>
                <arg>--module-path</arg>
                <arg>/opt/javafx-sdk-21/javafx-sdk-21.0.7/lib</arg>
                <arg>--add-modules</arg>
                <arg>javafx.controls,javafx.fxml</arg>
                </compilerArgs>
            </configuration>
            </plugin>

            <!-- Maven jar plugin -->
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <archive>
                    <manifest>
                        <mainClass>com.netit.Main</mainClass>
                    </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- Maven shade plugin (opcjonalny) -->
            <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.4.1</version>
            <executions>
                <execution>
                <phase>package</phase>
                <goals><goal>shade</goal></goals>
                <configuration>
                    <transformers>
                    <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                        <mainClass>com.netit.Main</mainClass>
                    </transformer>
                    </transformers>

                    <!-- ensure your classes aren’t excluded! -->
                    <filters>
                    <filter>
                        <artifact>*:*</artifact>
                        <includes>
                        <include>com/netit/**</include>
                        </includes>
                    </filter>
                    </filters>
                </configuration>
                </execution>
            </executions>
            </plugin>

            <!-- exec-maven-plugin (do uruchamiania) -->
            <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.1.0</version>
            <configuration>
                <mainClass>com.netit.Main</mainClass>
                <vmArgs>
                <vmArg>--module-path /opt/javafx-sdk-21/javafx-sdk-21.0.7/lib:target/classes</vmArg>
                <vmArg>--add-modules javafx.controls,javafx.fxml</vmArg>
                <vmArg>-m</vmArg>
                <vmArg>com.netit/com.netit.Main</vmArg>
                </vmArgs>
            </configuration>
            </plugin>


        </plugins>
    </build>

    <!-- Brak zależności w Maven; JavaFX pobierane z lokalnego SDK -->
</project>
